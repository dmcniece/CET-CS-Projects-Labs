@model IEnumerable<Assignment2.Models.BadWord>
@using Microsoft.AspNetCore.Http;
@{
    ViewBag.Title = "View Bad Words";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Home" asp-action="SubmitBadWords" asp-route-word="Word" method="post">
    <div class="form-group">
        <label for="Word">Word:</label>
        <input name="Word" class="form-control" id="Word" type="text">
    </div>
    <button type="submit" class="btn btn-default">Submit Bad Word</button>
</form>
<br />
<br />
<h2>Current Bad Words:</h2>
@foreach(var item in Model)
{
    <p>@item.Word</p>
    <form asp-controller="Home" asp-action="DeleteBadWord" asp-route-badWord="@item.Word" method="post">
        <button type="submit" class="btn btn-default btn-sm">Delete Word</button>
    </form>
    <br />
    <hr style="background-color:white;" />

}
